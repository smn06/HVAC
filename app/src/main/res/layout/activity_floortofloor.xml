<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".MainActivity"
    >
    <TextView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="340dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_power_off_24"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:layout_marginTop="60dp"
        android:text="Floor to Floor Water Supply"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/carter_one"
        android:textSize="47dp"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="360dp"
        android:padding="10dp"
        android:layout_marginTop="720dp"
        android:fontFamily="sans-serif-black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
        />
    <TextView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="160dp"
        android:layout_marginLeft="170dp"
        android:padding="10dp"
        android:layout_marginTop="720dp"
        android:fontFamily="sans-serif-black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        />
    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/scheduled_supp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="320dp"
        android:layout_marginRight="50dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="12dp"
        android:text="Scheduled Supply"
        android:textSize="28dp"/>
<!--        android:background="#FFFFFF"-->

    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/ON"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="440dp"
        android:layout_marginRight="50dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="12dp"
        android:text="ON"
        android:textSize="28dp"/>
<!--        android:background="#FFFFFF"-->
        />
    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/OFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="560dp"
        android:layout_marginRight="50dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="12dp"
        android:text="OFF"
        android:textSize="28dp"/>
<!--        android:background="#FFFFFF"-->
        />
</RelativeLayout>