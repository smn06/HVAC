<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".MainActivity"
    >
    <TextView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="340dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_power_off_24"
        />

    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="360dp"
        android:padding="10dp"
        android:layout_marginTop="720dp"
        android:fontFamily="sans-serif-black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
        />
    <TextView
        android:id="@+id/home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="160dp"
        android:layout_marginLeft="170dp"
        android:padding="10dp"
        android:layout_marginTop="720dp"
        android:fontFamily="sans-serif-black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_home_24"
        />
    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="80dp"
        android:layout_marginRight="80dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="11dp"
        android:text="CC Camera"
        android:textSize="24dp"/>
<!--        android:background="#FFFFFF"/>-->
    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/person"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="180dp"
        android:layout_marginRight="80dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="11dp"
        android:text="person Counter"
        android:textSize="24dp"/>
<!--        android:background="#FFFFFF"/>-->
    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/face"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="80dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="11dp"
        android:text="Face id"
        android:textSize="24dp"/>
<!--        android:background="#FFFFFF"/>-->
    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/motion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="380dp"
        android:layout_marginRight="80dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="11dp"
        android:text="Motion record"
        android:textSize="24dp"/>
<!--        android:background="#FFFFFF"/>-->

    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/recordings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="480dp"
        android:layout_marginRight="80dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="11dp"
        android:text="Recordings"
        android:textSize="24dp"/>
<!--        android:background="#FFFFFF"/>-->
    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="580dp"
        android:layout_marginRight="80dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="11dp"
        android:text="Settings"
        android:textSize="24dp"/>



</RelativeLayout>