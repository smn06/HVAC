<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".MainActivity"
    >
    <TextView
        android:id="@+id/log"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="340dp"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_power_off_24"
        />

    <TextView
        android:id="@+id/back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="360dp"
        android:padding="10dp"
        android:layout_marginTop="720dp"
        android:fontFamily="sans-serif-black"
        android:textSize="40dp"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"
        />

    <TextView
        android:id="@+id/noti1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="90dp"
        android:layout_marginRight="160dp"
        android:layout_marginLeft="20dp"
        android:text="System Temp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/carter_one"
        android:textSize="28dp"
        android:textAlignment="center"
        />
    <EditText
        android:background="@drawable/rounded_corners"
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="30dp"
        />
    <TextView

        android:id="@+id/noti2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="175dp"
        android:layout_marginRight="160dp"
        android:layout_marginLeft="20dp"
        android:text="Building Temp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/carter_one"
        android:textSize="28dp"
        android:textAlignment="center"
        />

    <EditText
        android:background="@drawable/rounded_corners"
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="30dp"
        />

    <TextView

        android:id="@+id/noti3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="250dp"
        android:layout_marginRight="160dp"
        android:layout_marginLeft="20dp"
        android:text="Outside Temp"
        android:textColor="#FFFFFF"
        android:fontFamily="@font/carter_one"
        android:textSize="28dp"
        android:textAlignment="center"
        />

    <EditText
        android:background="@drawable/rounded_corners"
        android:id="@+id/edit3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:padding="10dp"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="250dp"
        android:layout_marginRight="30dp"
        />


    <!--        android:background="#FFFFFF"/>-->
    <Button
        android:id="@+id/temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="380dp"
        android:layout_marginRight="70dp"
        android:background="@drawable/rounded_corners"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="12dp"
        android:text="change temp"
        android:textSize="28dp" />

    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/turbo_cool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="480dp"
        android:layout_marginRight="70dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="12dp"
        android:text="Turbo cooling"
        android:textSize="28dp"/>
<!--        android:background="#FFFFFF"/>-->
    <Button
        android:background="@drawable/rounded_corners"
        android:id="@+id/reboot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="580dp"
        android:layout_marginRight="70dp"
        android:ellipsize="none"
        android:fontFamily="@font/carter_one"
        android:padding="12dp"
        android:text="Reboot system"
        android:textSize="28dp"/>
<!--        android:background="#FFFFFF"/>-->
</RelativeLayout>